<div class="card text-center">
    <div class="card-header">
        <h2>Create New Post</h2>
    </div>
    <form id="new-post-form" class="card-body">
        <div class='form-group'>
            <label class="form-label" for="post-title">Title</label>
            <div>
                <input type="text" name="post-title" class="form-input" />
            </div>
        </div>
        <div class='form-group'>
            <label class="form-label" for="post-body">Content</label>
            <div>
                <textarea name="post-body" class="form-input" rows='3'></textarea>
            </div>
        </div>
        <button type="submit" class="btn btn-dark">Create</button>
    </form>
</div>

<script src="/javascript/new.js"></script>