<div class="card text-center">
    <div class="card-header">
        <h2>Edit Post</h2>
    </div>
    <form id="edit-post-form" class="card-body">
        <input type="hidden" name="post-id" value="{{post.id}}" />
        <div class='form-group'>
            <label class="form-label" for="post-title">Title</label>
            <div>
                <input type="text" name="post-title" value="{{post.title}}" class="form-input" />
            </div>
        </div>
        <div class='form-group'>
            <label class="form-label" for="post-body">Content</label>
            <div>
                <textarea name="post-body" class="form-input">{{post.body}}</textarea>
            </div>
        </div>
        <button type="submit" class="btn btn-dark">Update</button>

        <button type="button" id="delete-btn" class="btn btn-dark">Delete</button>
        <button type="button" id="danger-btn" class="btn btn-danger hidden">Confirm Delete Post</button>
    </form>
</div>

<script src="/javascript/edit.js"></script>